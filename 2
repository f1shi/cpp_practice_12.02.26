#include <iostream>
#include <string>

using namespace std;

int main() {
    int n;
    int summa = 0;
    cin >> n;
    if (n >= 60) {
        int t = n / 60; // сколько раз по 60 укладывается в n 
        summa += 440*t;
        n -= 60*t;
        cout << "куплено " << 60*t << " билетов по " << 440;
    } if (n >= 20) {
        int t = n / 20; // сколько раз по 20 укладывается в n 
        summa += 230*t;
        n -= 20*t;
        cout << "\nкуплено " << 20*t << " билетов по " << 230;
    } if (n >= 10) {
        int t = n / 10; // сколько раз по 10 укладывается в n 
        summa += 125*t;
        n -= 10*t;
        cout << "\nкуплено " << 10*t << " билетов по " << 125;
    } if (n >= 5) {
        int t = n / 5; // сколько раз по 5 укладывается в n 
        summa += 70*t;
        n -= 5*t;
        cout << "\nкуплено " << 5*t << " билетов по " << 70;
    } if (n >= 1) {
        int t = n / 1; // сколько раз по 1 укладывается в n 
        summa += 15*t;
        n -= 1*t;
        cout << "\nкуплено " << 1*t << " билетов по " << 15;
    }
    cout << "\nминимальная сумма = " << summa;
}
